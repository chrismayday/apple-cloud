$header-height=40px

.header-box
  height $header-height
  line-height: $header-height;
  background-color: #E9EEF3;
  color: #333;
  text-align: center;
  min-width 800px
// overflow hidden
.header-wrap
  display flex
  .btn-group
    width 300px
  .search-form
    flex 1
    height $header-height
    line-height $header-height
    .demo-form-inline
      position relative
      max-height 100px
      overflow hidden
      .form-more-btn
        font-style 14px
        height $header-height
        position absolute
        top 0
        left 300px
    .form-more-box
      position absolute
      top 0
      width 800px
      background-color #fff
      box-shadow 3px 3px 15px #ccc
      z-index 101
      left 50%
      margin-left -420px
      border-radius 5px
      padding 10px
      .el-icon-circle-close-outline
        font-size 20px
        color #ccc
        position absolute
        top 5px
        right 5px
        transition all .3s
      .el-icon-circle-close-outline:hover
        color red
        transform rotateZ(180deg)
        transition all .3s
    .search-form >>> .el-form
      .el-form-item.el-form-item--mini
       height 44px
       padding 16px 0 0 0
       margin 0
       background #ff930e
       .el-form-item__label
         height 28px
         vertical-align top

.el-main
  background-color: #fff;
  color #333;
  padding 0 0 0 10px

.el-footer
  background-color: #E9EEF3;
  color: #333;
  line-height: 30px;
  height 30px

.el-pagination
  padding 1px 0
  line-height: 30px;
  margin 0 auto
  padding 0
  text-align: center;

.module-table-expand
  font-size 0
.module-table-expand >>> label
  width 90px
  color #99a9bf
.module-table-expand >>> .el-form-item
   margin-right 0
   margin-bottom 0
   width 33.3%

.my-dialog >>> .el-dialog
  .el-dialog__header
    border-bottom 1px solid #DFE4ED
    padding-bottom 0
    .el-dialog__title
      font-weight 600
    .el-dialog__footer
      border-top 1px solid #DFE4ED
      padding 0 10px
