        <include refid="selectorLimit" />
    </select>

    <!--总条数-->
    <select id="selectListTotal" parameterType="com.cachexic.cloud.feign.msg.entity.query.MsgPersistentQuery" resultType="long">
        select count(id) from <include refid="table" />
